<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sportServices">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/serviceImage"
            android:layout_width="match_parent"
            android:layout_height="266dp"
             />

        <TextView
            android:id="@+id/serviceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/serviceImage"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Sport" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/serviceImage"
            android:layout_marginTop="0dp"
            android:background="#4666C7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="30dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonToJimService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Качалка***" />

                <Button
                    android:id="@+id/buttonToCardio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Беговая дорожка***" />

                <Button
                    android:id="@+id/buttonToYoga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Йога***" />

                <Button
                    android:id="@+id/buttonToBrusya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Брусья***" />

                <Button
                    android:id="@+id/buttonToMMA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ММА зал****" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>